DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null && pwd )"

all_stdout=`mktemp`

for f in `find $DIR -type f`; do
    self=`basename $f`
    if [ "$self" == "test-all" ]; then
        continue
    fi

    echo -e "\033[35m================================================================================\033[0m" >> $all_stdout
    echo -e "\033[37m[${BASH_SOURCE[0]#*kissbash/}] \033[33m${f#*kissbash/}\033[0m" >> $all_stdout
    echo -e "\033[37mRunning $f\033[0m" >&2

    (
        . $f
        cat "$f" | grep -E '^test_[_a-zA-Z]*()' | while read line; do
            echo -e "\033[37m--------------------------------------------------------------------------------\033[0m" >> $all_stdout
            func=${line%()*}
            echo -e "\033[37m[${BASH_SOURCE[0]#*kissbash/}] \033[33m${f#*kissbash/}::\033[1;33m$func\033[0m" >> $all_stdout
            echo -e "     \033[37m$func\033[0m \033[s" >&2
            "$func" >> $all_stdout
            echo >> $all_stdout
        done
    )

    echo
done

echo -e "\033[36m**************************************DONE**************************************\033[0m\n"

echo -e "for details,\n\033[1mcat $all_stdout\033[0m"

if [ "x$1" == "x-v" ] || [ "x$1" == "x--verbose" ]; then
    echo
    cat $all_stdout
fi
